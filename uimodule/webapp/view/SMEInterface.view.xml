<mvc:View controllerName="com.myorg.recommendationApp.controller.MainView"
          xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:core="sap.ui.core"
          xmlns="sap.m" xmlns:l="sap.ui.layout">
  <Page id="page2" title="SME Dashboard">
    <content>
      <l:VerticalLayout class="sapUiContentPadding" width="100%">
      <VBox>
    <Label text="Enter Service name" labelFor="input-a" design="Bold" />
    <Input id="input-a" required="true" placeholder="Example: SAP Intelligent Robotic Automation" width="50%" />
    <Label text="Select Domain" />

    <ComboBox>
      <core:Item key="1" text="SAP BTP" />
      <core:Item key="2" text="SAP Ariba" />
    </ComboBox>



    <Label
      text="Enter Service Description"
      labelFor="input-b"
      design="Bold" />
    <TextArea required="true" id="input-b" width="50%" height="70%" growing="true"/>
        <Button text="Save"/>
      </VBox>
      </l:VerticalLayout>
    </content>
  </Page>
</mvc:View>
